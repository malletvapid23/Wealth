@model BusinessObjects.ResourcePool

<h2>@ViewBag.Title</h2>

<p>
    <div class="btn-group">
        @{ Html.BeginForm("IncreaseNumberOfSales", "ResourcePool", new { area = "", returnAction = ViewBag.ReturnAction }, FormMethod.Post, null); }
        <button type="submit" class="btn btn-default">Increase Number of Sales</button>
        @{ Html.EndForm(); }
        @{ Html.BeginForm("ResetNumberOfSales", "ResourcePool", new { area = "", returnAction = ViewBag.ReturnAction }, FormMethod.Post, null); }
        <button type="submit" class="btn btn-default">Reset Number of Sales</button>
        @{ Html.EndForm(); }
    </div>
</p>
<p>
    CMRP Rate: @Model.ResourcePoolRate.ToString("P2")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationSet.First().Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationSet.First().ProductionCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationSet.First().SalesPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationSet.First().License.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationSet.First().ProfitPercentage)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrganizationSet.First().SalesPriceIncludingResourcePoolTax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().NumberOfSales)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().TotalProfit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().TotalResourcePoolTax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().TotalSalesRevenueIncludingResourcePoolTax)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().TotalCostIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().KnowledgeIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().QualityIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().SectorIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().EmployeeSatisfactionIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().CustomerSatisfactionIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().DistanceIndexIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().TotalResourcePoolIncome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserOrganizationRatingSet.First().TotalIncome)
        </th>
    </tr>

    @foreach (var item in Model.UserOrganizationRatingSet)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Organization.Name)
            </td>
            <td>
                @item.Organization.ProductionCost.ToString("N2")
            </td>
            <td>
                @item.Organization.SalesPrice.ToString("N2")
            </td>
            <td>
                @Html.DisplayFor(model => item.Organization.License.Name)
            </td>
            <td>
                @item.Organization.ProfitPercentage.ToString("P2")
            </td>
            <td>
                @item.Organization.SalesPriceIncludingResourcePoolTax.ToString("N2")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfSales)
            </td>
            <td>
                @item.TotalProfit.ToString("N2")
            </td>
            <td>
                @item.TotalResourcePoolTax.ToString("N2")
            </td>
            <td>
                @item.TotalSalesRevenueIncludingResourcePoolTax.ToString("N2")
            </td>
            <td>
                @item.TotalCostIndexIncome.ToString("N2")
            </td>
            <td>
                @item.KnowledgeIndexIncome.ToString("N2")
            </td>
            <td>
                @item.QualityIndexIncome.ToString("N2")
            </td>
            <td>
                @item.SectorIndexIncome.ToString("N2")
            </td>
            <td>
                @item.EmployeeSatisfactionIndexIncome.ToString("N2")
            </td>
            <td>
                @item.CustomerSatisfactionIndexIncome.ToString("N2")
            </td>
            <td>
                @item.DistanceIndexIncome.ToString("N2")
            </td>
            <td>
                @item.TotalResourcePoolIncome.ToString("N2")
            </td>
            <td>
                @item.TotalIncome.ToString("N2")
            </td>
        </tr>
    }
    <tr>
        <td>
            Total
        </td>
        <td>
            @Html.DisplayFor(modelItem => modelItem.ProductionCost)
        </td>
        <td>
            @Model.SalesPrice.ToString("N2")
        </td>
        <td>
            &nbsp;
        </td>
        <td>
            &nbsp;
        </td>
        <td>
            @Model.SalesPriceIncludingResourcePoolTax.ToString("N2")
        </td>
        <td>
            @Html.DisplayFor(modelItem => modelItem.NumberOfSales)
        </td>
        <td>
            @Model.TotalProfit.ToString("N2")
        </td>
        <td>
            @Model.TotalResourcePoolTax.ToString("N2")
        </td>
        <td>
            @Model.TotalSalesRevenueIncludingResourcePoolTax.ToString("N2")
        </td>
        <td>
            @Model.TotalCostIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.KnowledgeIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.QualityIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.SectorIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.EmployeeSatisfactionIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.CustomerSatisfactionIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.DistanceIndexIncome.ToString("N2")
        </td>
        <td>
            @Model.TotalResourcePoolIncome.ToString("N2")
        </td>
        <td>
            @Model.TotalIncome.ToString("N2")
        </td>
    </tr>
</table>
