<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Wealth Economy</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
</head>
<body data-ng-app="main" data-ng-controller="layoutController as vm">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="/" class="navbar-brand">Wealth Economy</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">Content <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/content/overview">Overview</a></li>
                            <li><a href="/content/technologies">Technologies</a></li>
                        </ul>
                    </li>
                    <li class="dropdown hide">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">Chapters <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/content/chapter1">Chapter 1</a></li>
                            <li><a href="/content/chapter2">Chapter 2</a></li>
                            <li><a href="/content/chapter3">Chapter 3</a></li>
                            <li><a href="/content/chapter4">Chapter 4</a></li>
                            <li><a href="/content/chapter5">Chapter 5</a></li>
                            <li><a href="/content/chapter6">Chapter 6</a></li>
                            <li><a href="/content/chapter7">Chapter 7</a></li>
                            <li><a href="/content/chapter8">Chapter 8</a></li>
                            <li><a href="/content/chapter9">Chapter 9</a></li>
                            <li><a href="/content/chapter10">Chapter 10</a></li>
                        </ul>
                    </li>
                    <li class="dropdown" data-ng-show="vm.userInfo">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">Manage <b class="caret"></b></a>
                        @* Manage Menu - Generated *@
                        <script src="/App/scripts/includes/manageMenu.js"></script>
                    </li>
                    <li class="dropdown" data-ng-show="vm.userInfo">
                        <a href="/manage/custom/userResourcePool">CMRP</a>
                    </li>
                    <li class="dropdown" data-ng-show="vm.userInfo">
                        <a href="/manage/custom/userResourcePool2">CMRP 2</a>
                    </li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown" data-ng-show="vm.userInfo">
                        <a href="" class="dropdown-toggle" data-toggle="dropdown">User: {{ vm.userInfo.Email }} <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/account/accountEdit">Edit</a></li>
                            <li><a href="/account/changePassword">Change password</a></li>
                            <li><a href="" data-ng-click="vm.resetSampleData()">Reset sample data</a></li>
                            <li><a href="" data-ng-click="vm.logout()">Logout</a></li>
                        </ul>
                    </li>
                    <li data-ng-show="!vm.userInfo">
                        <div class="navbar-text nofloat">
                            <a href="/account/register">Register</a>
                            &nbsp;
                            <a href="/account/login">Login</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">

        @RenderBody()
        <div ng-view></div>

        <hr />
        <footer>
            <p>
                {{ vm.currentDate | date:'yyyy' }} - Open Source Pioneers<br />
                Ver.: {{ vm.applicationInfo.CurrentVersion }}<br />
            </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

    <script src="/Scripts/angular.js"></script>
    <script src="/Scripts/angular-route.js"></script>
    <script src="/Scripts/datajs-1.1.2.js"></script>
    <script src="/Scripts/toastr.js"></script>

    <script src="/Scripts/breeze.debug.js"></script>
    <script src="/Scripts/breeze.angular.js"></script>
    <script src="/Scripts/breeze.directives.js"></script>

    <script src="http://code.highcharts.com/highcharts.js"></script>
    <script src="https://rawgithub.com/pablojim/highcharts-ng/master/src/highcharts-ng.js"></script>
    @*<script src="http://code.highcharts.com/modules/exporting.js"></script>*@

    <script src="/App/scripts/main.js"></script>
    <script src="/App/scripts/logger.js"></script>
    <script src="/App/scripts/route.js"></script>
    <script src="/App/scripts/entityManagerFactory.js"></script>
    <script src="/App/scripts/dataContext.js"></script>
    <script src="/App/scripts/filters/angular-percentage.js"></script>

    <script src="/App/scripts/services/mainService.js"></script>
    <script src="/App/scripts/controllers/layoutController.js"></script>

    @* Content *@
    <script src="/App/scripts/controllers/content/chapter1Controller.js"></script>
    <script src="/App/scripts/controllers/content/chapter4Controller.js"></script>
    <script src="/App/scripts/controllers/content/chapter5Controller.js"></script>
    <script src="/App/scripts/controllers/content/chapter6Controller.js"></script>
    <script src="/App/scripts/controllers/content/chapter10Controller.js"></script>

    @* Account *@
    <script src="/App/scripts/controllers/account/loginController.js"></script>
    <script src="/App/scripts/controllers/account/registerController.js"></script>
    <script src="/App/scripts/controllers/account/accountEditController.js"></script>
    <script src="/App/scripts/controllers/account/changePasswordController.js"></script>

    @* Manage Scripts - Custom *@
    <script src="/App/scripts/controllers/manage/userResourcePool/userResourcePoolCustomListController.js"></script>
    <script src="/App/scripts/controllers/manage/userResourcePool/userResourcePoolCustomViewController.js"></script>

    @* Manage Scripts - Generated *@
    <script src="/App/scripts/includes/manageScripts.js"></script>

    @* Service extensions *@
    <script src="/App/scripts/services/userService.js"></script>
    <script src="/App/scripts/services/resourcePoolService.js"></script>
    <script src="/App/scripts/services/userResourcePoolService.js"></script>

</body>
</html>
